<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/colors"
    android:layout_height="match_parent"
    tools:context=".OrderSummary">
    
    <TextView
        android:text="Order Summary"
        android:textSize="26dp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:text="Items : "
        android:textSize="24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:text="Payment Method : "
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"


        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="1. Small                     10          x2         20"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:id="@+id/item1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="2. Family                  50         x1         50"
            android:textSize="16dp"
            android:id="@+id/item2"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="3. Regular               40         x3        120"
            android:id="@+id/item3"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="4. Jumbo Pack     130         x2       260"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:id="@+id/item4"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="5. Jumbo Pack     130         x2       260"
            android:textSize="16dp"
            android:layout_margin="3dp"
            android:id="@+id/item5"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="270dp"
        android:text="Total : "
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_marginTop="305dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:id="@+id/total_amount"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:text="450 PKR"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="20"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/cod"
            android:layout_weight="5"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
        <RadioButton
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioButton>
        <ImageView
            android:src="@drawable/unionpay"
            android:layout_weight="5"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
        <RadioButton
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RadioButton>

    </LinearLayout>


    <Button
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:text="Place Order"
        android:layout_marginTop="500dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:id="@+id/btn_summary"
        >

    </Button>


</RelativeLayout>